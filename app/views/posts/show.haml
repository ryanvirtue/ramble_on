.container{style: 'margin-bottom: 20px; '}
  .post
    - if current_user
      = link_to edit_post_path(@post) do
        .btn.btn-warning
          Edit Post
    %h2= @post.title
    %h3= @post.subtitle if @post.subtitle.present?
    %p= @post.published_at.strftime("%d %B %Y") if @post.published_at.present?
    %article
      = @post.content.html_safe
